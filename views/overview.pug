extends base

block content
    main
        section(class='pt-10 overflow-hidden md:pt-0 sm:pt-16 2xl:pt-16')
            //- * SECTION: hero
            div(class='px-4 mx-auto sm:px-6 lg:px-8 max-w-5xl')
                div(class='flex items-strech justify-center flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-6 lg:space-x-8')
                    div(class='flex flex-col md:flex-row items-strech justify-between bg-gray-50 dark:bg-gray-800 py-6 px-6 md:py-12 lg:px-12 md:w-8/12 lg:w-7/12 xl:w-8/12 2xl:w-9/12')
                        div(class='flex flex-col justify-center md:w-1/2')
                            h1(class='text-3xl lg:text-4xl font-semibold text-gray-800 dark:text-white') Sign up today
                            p(class='text-base lg:text-xl text-gray-800 dark:text-white mt-2') Get a chance to win amazing surprises
                        div(class='md:w-1/2 mt-8 md:mt-0 flex justify-center md:justify-end')
                            img(src="img/gift/gift-1.png", alt="")
                    div(class='md:w-4/12 lg:w-5/12 xl:w-4/12 2xl:w-3/12 bg-gray-50 dark:bg-gray-800 py-6 px-6 md:py-0 md:px-4 lg:px-6 flex flex-col justify-center relative')
                        div(class='flex flex-col justify-center')
                            h1(class='text-3xl lg:text-4xl font-semibold text-gray-800 dark:text-white') Win
                            p(class='text-base lg:text-xl text-gray-800 dark:text-white') Games
                        div(class='flex justify-end md:absolute md:bottom-4 md:right-4 lg:bottom-0 lg:right-0')
                            img(src="img/gift/gift-2.png", alt="", class='md:w-20 md:h-20 lg:w-full lg:h-full')
            
            //- * SECTION: tours
            div(class='px-4 mx-auto max-w-5xl pt-20 pb-28 sm:px-6 lg:px-16')
                div(class='max-w-2xl mx-auto text-center')
                    span(class='font-medium text-colorTitleSmall mb-12') Tours
                    h2(class='text-2xl font-bold leading-tight text-colorMidnightBlue sm:text-3xl lg:text-4xl') Navigate Tours

                div(class='relative mt-12 lg:mt-20')
                    div(class='relative grid grid-cols-1 gap-y-12 md:grid-cols-3 gap-x-10')
                        //- CARD: 1
                        div(class='overflow-hidden bg-white rounded-xl shadow')
                            div.relative
                                a(href="#" class='block aspect-w-4 aspect-h-3')
                                    img(src="img/tours/tour-1-1.jpg", alt="img", class='object-cover w-full h-full')
                            div.pb-5.px-5
                                div
                                    span(class='block mt-6 text-xs font-semibold tracking-widest text-gray-500 uppercase') MEDIUM 7-DAY TOUR 
                                    p(class='text-colorParagraphPrimary text-sm mt-3') Exploring the jaw-dropping US east coast by foot and by boat

                                div(class='flex justify-between mt-5 text-sm')
                                    div.flex.gap-2.items-center
                                        svg(class='h-4 w-4 fill-colorCoral')
                                            use(xlink:href='img/icons.svg#icon-map-pin')
                                        span(class='text-colorTitleSmall') Oregon, US
                                    div.flex.gap-2.items-center
                                        svg(class='h-4 w-4 fill-colorCoral')
                                            use(xlink:href='img/icons.svg#icon-calendar')
                                        span(class='text-colorTitleSmall') June 2021

                                div(class='flex justify-between mt-2 text-sm')
                                    div.flex.gap-2.items-center
                                        svg(class='h-4 w-4 fill-colorCoral')
                                            use(xlink:href='img/icons.svg#icon-flag')
                                        span(class='text-colorTitleSmall') 4 stops
                                    div.flex.gap-2.items-center
                                        svg(class='h-4 w-4 fill-colorCoral')
                                            use(xlink:href='img/icons.svg#icon-user')
                                        span(class='text-colorTitleSmall') 15 people
                                
                                div.flex.justify-between.text-sm.mt-5.bg-gray-200.items-center.p-2.rounded-xl
                                    div.flex.flex-col
                                        span.text-colorParagraphPrimary.mb-1.font-extrabold $ 300
                                            | 
                                            span.text-colorParagraphPrimary.mb-1.font-normal per person
                                        span.text-colorParagraphPrimary.mb-1.font-extrabold 4.3 
                                            | 
                                            span.text-colorParagraphPrimary.mb-1.font-normal rating(7)
                                    
                                    div
                                        a(href="" class='bg-colorNavy rounded-2xl px-5 py-2 text-colorWhite text-sm') View

                            
