extends base

mixin navItem(link, text, icon, active)
    li: a(href=`${link}` class='flex gap-3 items-center text-sm uppercase mb-3 text-gray-900 p-2 transition duration-150 hover:ease-in hover:bg-gray-200') 
        svg(class='w-4 h-4')
            use(xlink:href=`img/icons.svg#icon-${icon}`)
        | #{text}

block content
    section(class='py-10 overflow-hidden')
        div(class='px-4 mx-auto sm:px-6 lg:px-8 max-w-5xl')
            div(class='grid grid-cols-1 my-8 md:mt-10 gap-y-6 md:grid-cols-3 gap-x-2')
                div(class='bg-gray-50 p-5')
                    div.mb-10
                        ul
                            +navItem('#', 'settings', 'settings', true)
                            +navItem('#', 'My bookings', 'briefcase', false)
                            +navItem('#', 'My reviews', 'star', false)
                            +navItem('#', 'Billing', 'credit-card', false)

                    - if (user.role === 'admin')
                        div
                            h5(class='uppercase text-sm') Admin
                            hr(class='mb-3')
                            ul
                                +navItem('#', 'Manage tours', 'map', false)
                                +navItem('#', 'Manage users', 'users', false)
                                +navItem('#', 'Manage reviews', 'star', false)
                                +navItem('#', 'Manage bookings', 'briefcase', false)

                div(class='md:col-span-2 p-5 md:px-24')
                    div
                        h2(class='mb-8 uppercase font-bold text-colorNavy') Your account settings
                        form.form-user-data
                            div.mb-5
                                label(for='name', class='text-sm text-gray-700') Name
                                input(type='text', value=`${user.name}`,id='name' , class='block mt-2 text-sm w-full py-2 px-5 text-gray-900 placeholder-gray-500 transition-all duration-200 bg-gray-100 border border-gray-100 focus:outline-none focus:border-gray-500 caret-gray-500', required, name='name')
                            div.mb-5
                                label(for='name', class='text-sm text-gray-700') Email address 
                                input(type='email', value=`${user.email}`,id='email' , class='block mt-2 text-sm w-full py-2 px-5 text-gray-900 placeholder-gray-500 transition-all duration-200 bg-gray-100 border border-gray-100 focus:outline-none focus:border-gray-500 caret-gray-500', required, name='email')
                            div(class='mb-5 flex items-center gap-5')
                                img(src=`img/users/${user.photo}`, class='w-16 h-16 rounded-full', alt="User photo")
                                input(type='file', accept='image/*' id='photo' name='photo')
                            div
                                button(class='bg-colorNavy uppercase rounded-full px-5 py-2 text-colorWhite text-sm float-right hover:bg-gray-700') Save settings

                    hr.mb-10.mt-24

                    div 
                        h2(class='mb-8 uppercase font-bold text-colorNavy') Password Change
                        form.form-user-password
                            div.mb-5
                                label(for='', class='text-sm text-gray-700') Current password
                                input(type='password', id='password-current', class='block mt-2 text-sm w-full py-2 px-5 text-gray-900 placeholder-gray-500 transition-all duration-200 bg-gray-100 border border-gray-100 focus:outline-none focus:border-gray-500 caret-gray-500', placeholder='••••••••••••••••', required='')
                            div.mb-5
                                label(for='', class='text-sm text-gray-700') New password
                                input(type='password', id='password', class='block mt-2 text-sm w-full py-2 px-5 text-gray-900 placeholder-gray-500 transition-all duration-200 bg-gray-100 border border-gray-100 focus:outline-none focus:border-gray-500 caret-gray-500', placeholder='••••••••••••••••', required='')
                            div.mb-5
                                label(for='', class='text-sm text-gray-700') Confirm password
                                input(type='password', id='password-confirm', class='block mt-2 text-sm w-full py-2 px-5 text-gray-900 placeholder-gray-500 transition-all duration-200 bg-gray-100 border border-gray-100 focus:outline-none focus:border-gray-500 caret-gray-500', placeholder='••••••••••••••••', required='')
                            div
                                button(class='btn-save__password bg-colorNavy uppercase rounded-full px-5 py-2 text-colorWhite text-sm float-right hover:bg-gray-700') Save Password
